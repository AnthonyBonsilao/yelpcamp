<% layout('./layouts/boilerplate') -%>

    <form class="row" action="/campgrounds" method="POST">
        <div class="col-6 offset-3">
            <div class="mb-3">
                <label class="form-label" for="title">Campground Title:</label>
                <input class="form-control" type="text" id="title" placeholder="My Campground" name="campground[title]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Campground Location:</label>
                <input class="form-control" type="text" id="location" placeholder="Region, State"
                    name="campground[location]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Campground Image:</label>
                <input class="form-control" type="url" id="image" placeholder="www.example.com"
                    name="campground[image]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price:</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input class="form-control" type="number" id="price" placeholder="0.00" step="0.01" min="0.00"
                        max="500" name="campground[price]">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="descrption">Campground Description:</label>
                <textarea class="form-control" type="text" id="descrption" name="campground[description]"></textarea>
            </div>
            <button class="btn btn-primary col-4">Submit</button>
            <a class="btn btn-secondary" href="/campgrounds">Back to Campgrounds</a>
        </div>
    </form>